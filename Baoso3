local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

-- T·∫°o ScreenGui
local screenGui = Instance.new("ScreenGui", PlayerGui)
screenGui.Name = "StormAlertGui"
screenGui.ResetOnSpawn = false

-- T·∫°o Frame h√¨nh ch·ªØ nh·∫≠t
local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0.9, 0, 0.15, 0)
frame.Position = UDim2.new(0.05, 0, 0.8, 0)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BackgroundTransparency = 0.4
frame.BorderSizePixel = 0

-- T·∫°o TextLabel
local textLabel = Instance.new("TextLabel", frame)
textLabel.Size = UDim2.new(1, 0, 1, 0)
textLabel.Position = UDim2.new(0, 0, 0, 0)
textLabel.BackgroundTransparency = 1
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
textLabel.TextScaled = true
textLabel.Font = Enum.Font.SourceSansBold
textLabel.TextTransparency = 1

-- N·ªôi dung th√¥ng b√°o
textLabel.Text = "üå™ THIS IS AN ANNOUNCEMENT FOR VIETNAMESE PLAYERS üå™\nƒê·ª´ng m√£i ch∆°i game m√† qu√™n th·∫ø gi·ªõi th·∫≠t!\nHi·ªán t·∫°i c∆°n b√£o s·ªë 3 ƒëang ƒë·∫øn, h√£y chu·∫©n b·ªã v√† tu√¢n th·ªß quy ƒë·ªãnh.\nCh√∫c b·∫°n v√† gia ƒë√¨nh lu√¥n m·∫°nh kh·ªèe v√† an to√†n! ‚ù§Ô∏è"

-- Hi·ªáu ·ª©ng r√µ d·∫ßn
TweenService:Create(textLabel, TweenInfo.new(3, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {
	TextTransparency = 0
}):Play()

-- ƒê·ª£i 8 gi√¢y, sau ƒë√≥ m·ªù d·∫ßn
task.delay(8, function()
	TweenService:Create(textLabel, TweenInfo.new(3, Enum.EasingStyle.Sine, Enum.EasingDirection.In), {
		TextTransparency = 1
	}):Play()

	-- X√≥a GUI sau khi m·ªù ho√†n to√†n
	task.delay(4, function()
		screenGui:Destroy()
	end)
end)
