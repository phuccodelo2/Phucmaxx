    "ğŸ’– Cáº£m Æ¡n anh em Ä‘Ã£ Ä‘á»c háº¿t, chÃºc gia Ä‘Ã¬nh tháº­t nhiá»u sá»©c khá»e!"
}

-- Táº¡o frame chÃ­nh Ä‘á»ƒ chá»©a text
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(1, 0, 1, 0)
frame.BackgroundTransparency = 1

-- HÃ m hiá»ƒn thá»‹ tá»«ng dÃ²ng má»™t
local function showMessage(text)
	local label = Instance.new("TextLabel", frame)
	label.Size = UDim2.new(1, 0, 0, 100)
	label.Position = UDim2.new(0.5, 0, 0.5, 0)
	label.AnchorPoint = Vector2.new(0.5, 0.5)
	label.Text = text
	label.TextScaled = true
	label.Font = Enum.Font.GothamBold
	label.TextColor3 = Color3.new(1, 1, 1)
	label.BackgroundTransparency = 1
	label.TextTransparency = 1

	-- Tween hiá»‡n rÃµ dáº§n
	local fadeIn = TweenService:Create(label, TweenInfo.new(1), {TextTransparency = 0})
	local fadeOut = TweenService:Create(label, TweenInfo.new(1), {TextTransparency = 1})

	fadeIn:Play()
	fadeIn.Completed:Wait()
	wait(2.5)
	fadeOut:Play()
	fadeOut.Completed:Wait()

	label:Destroy()
end

-- Cháº¡y láº§n lÆ°á»£t tá»«ng dÃ²ng
coroutine.wrap(function()
	for _, msg in ipairs(messages) do
		showMessage(msg)
	end
end)()
